<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reminders">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-105dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:backgroundTint="@color/purple_500"/>

        <TextView
            android:id="@+id/Reminders"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reminders"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonMeds"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:text="Medication"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <RadioButton
            android:id="@+id/radioButtonTestLevels"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:text="Test Levels"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <RadioButton
            android:id="@+id/radioButtonEndFast"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:text="End Fast"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/editTextDateMeds"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-242dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            android:minHeight="48dp"
            />

        <EditText
            android:id="@+id/editTextDateLevels"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextDateFasting"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="58dp"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"
            android:minHeight="48dp" />


        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:layout_marginVertical="60dp"
            android:backgroundTint="@color/button_colour"
            android:text="Request Date" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_gravity="right"
            android:layout_marginTop="-116dp"
            android:backgroundTint="@color/button_colour"
            android:text="Back" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>